import PageObject.AddCustomerPage;

public class AddCustomerMethod {
	
	public WebDriver ldriver;
	
	public AddCustomerPage acp;

	/*public AddCustomerMethod(WebDriver rdriver)
	{
		ldriver = rdriver;
		PageFactory.initElements(rdriver, this);
